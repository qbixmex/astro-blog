---
const { platform, username } = Astro.props;
const url = `https://www.${platform}.com/${username}`;
---
<a href={url} target="_blank">{platform}</a>

<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: hsl(260, 70%, 40%);
    text-decoration: none;
    border-radius: 8px;
  }
</style>